<div id="barra_titulo">
  <h3 class="titulo_index">Lista de Usuarios</h3>
</div>
  <% form_tag(:action=>"usuario_blogs") do %>
  <table id="listar">
   <tr>
     <th class="titulo_lista">Usuarios Seguidos</th>
    </tr>
    <% @sessao_usuario.usuario.usuario_blogs.each do |ub| %>
    <tr>
      <td>
       <%= check_box_tag "usuarios[]", ub.id %>
       <%= Usuario.find(ub.seguido_id).nome %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td><%= submit_tag "Remover" %></td>
    </tr>
  </table>
  <% end %>


  <% form_tag(:action=>"usuario_blogs") do %>
  <table id="listar">
