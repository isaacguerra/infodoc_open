<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="pt-br">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag "chromestyle.css" %>
    <%= stylesheet_link_tag "anylinkcssmenu.css" %>
    <%= stylesheet_link_tag "intranet.css" %>
    <%= stylesheet_link_tag "scaffold.css" %>
    <%= javascript_include_tag 'chrome.js' %>
    <%= javascript_include_tag 'anylinkcssmenu.js' %>
    <%= javascript_include_tag :defaults %>


    </script>
    <title>INTRANET :: Infomanager</title>
  </head>
  <body>
    <div id="topo">
        <div id="logo">
          <img src="/images/infodoc.gif" />
        </div>

        <div id="status">
          <b>Login: </b><i>Infomanager</i>
        </div>
    </div>
    <div id="tudo">
      <div class="chromestyle" "id="menu_nav">
        <ul>
          <% if @menu_modulo %>
           <% @menu_modulo.each do |m| %>
            <li><a href="#" rel=<%= m[0] %> rev="lr"><%= m[1] %></a></li>
           <% end %>

           <% @menu_modulo.each do |m| %>
             <div id=<%= m[0] %> class="dropmenudiv">
               <% @sessao_usuario.opcoes.each do |s| %>
                 <% if s[5] == true and s[6] == true  and s[7] == m[0] %>
                 <a href=<%= s[3] %>><%= s[4] %></a>
                 <% end %>
               <% end %>
             </div>
           <% end %>
          <% end %>

          <li><a href="#" rel='gerencia_conteudo' rev="lr">Grencia de Conteúdo</a></li>
          <% Formulariocategoria.all.each do |fc| %>
            <div id='gerencia_conteudo' class="dropmenudiv">
              <a href=#><%= fc.nome %></a>
              <% fc.formularios.each do |f| %>
                <a href="/ecm/formularios/<%= f.id %>/cadastros" id='gerencia_conteudo'><%= f.titulo %></a>
              <% end %>
            </div>
          <% end %>

        </ul>
        <!--1º drop down menu -->
      </div>
      <%=javascript_tag "cssdropdown.startchrome('menu_nav')"%>
      <div id="conteudo">
        <% if flash[:notice] %>
        <div id="flash">
          <%= flash[:notice] %>
        </div>
        <% end %>

      <%= yield %>

      </div>

      <div id="rodape">
      </div>
    </div>
  </body>
</html>

