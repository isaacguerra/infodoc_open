<div id="barra_titulo">
  <h3 class="titulo_new">Cadastro de Ajuda</h3>
</div>
<div class="formulario">
  <% form_for @ajuda, :url=>{:action=>'update'} do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :entidade_id, :value=>@sessao_usuario.entidade_id %>
    <%= fckeditor_textarea(:ajuda, :conteudo, :value=>@ajuda.conteudo, :toolbarSet=>'Easy', :width=>'100%', :height=>'200px') %><br>
    <%= f.submit 'Salvar', :class=>"botao_formulario" %>
  <% end %>
</div>
<div id="link_voltar">
  <%= link_to 'Voltar', ecm_formulario_ajudas_formularios_path(@formulario) %>
</div>

