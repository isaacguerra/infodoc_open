      <td class="error_messages"><%= f.error_messages %></td>
      <%= f.hidden_field :entidade_id, :value=>@entidade.id %>
  </tr>
  <tr>    
      <td class="lista_item"><%= f.label :nome %></td>
      <td class="lista_conteudo"><%= f.text_field :nome %></td>
  </tr>
  <tr>    
      <td class="lista_item"><%= f.label :descricao, 'DescriÃ§Ã£o' %></td>
      <td class="lista_conteudo"<%= f.text_field :descricao %></td>
   </tr>
   <tr>   
      <td class="lista_item"/>
      <td class="lista_conteudo"><%= f.submit 'Salvar', :class=>"botao_formulario" %></td>
