<h3>Editar Grupo</h3>
<% form_for @grupo, :url=>{:action=>'update'} do |f| %>
  <%= f.error_messages %>
  <%= f.label :nome %><br><%= f.text_field :nome %><br>
  <%= f.label 'Descrição',:descricao %><br><%= f.text_field :descricao %><br>
  <%= f.submit 'Salvar' %>
<% end %>
<%= link_to 'Voltar', core_grupo_path(@grupo) %>

