<div id="ferramentas">
  <h3 class="h3_index">Lista de Grupos</h3>
  <div id="novo">
   	<%= link_to 'Novo Grupo', new_core_admingrupo_path %>
  </div>
</div>
<table id="tabela_listar_index">
  </tr>
    <th class="titulo_item_index">Nome</th>
