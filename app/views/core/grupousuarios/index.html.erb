  <table id="listar">
   <tr>
     <th class="titulo_lista">Usuarios Inclusos no Grupo</th>
    </tr>
    <% @grupo.grupousuarios.each do |gu| %>
    <tr>
      <td>
       <%= check_box_tag "usuarios[]", gu.id %>
       <%= gu.usuario.nome %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td><%= submit_tag "Remover" %></td>
    </tr>
  </table>
  <% end %>


