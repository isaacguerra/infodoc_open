<div id="barra_titulo">
  <h3 id="titulo_edit">Alterar Perfil</h3>
</div>

<div class="formulario">
  <% form_for @usuario, :url=>{:action=>'update'}, :html => { :multipart => true }  do |f| %>
    <%= f.error_messages %>
    <%= f.label :nome %><br><%= f.text_field :nome %><br>
    <%= f.label :email, 'E-mail' %><br><%= f.text_field :email %><br>
    <%= f.label :avatar %><br><%= f.file_field :avatar %><br><br>

    <%= label_tag :senha_atual, 'Senha Atual' %><br><%= password_field_tag :senha_atual %><br>
    <%= f.label :senha %><br><%= f.password_field :senha %><br>
    <%= f.label :senha_confirmation, 'Confime a Senha' %><br><%= f.password_field :senha_confirmation %><br>
    <%= f.submit 'Salvar', :class=>"botao_formulario" %>
  <% end %>
</div>

<div id="link_voltar">
  <%= link_to 'Voltar', :action=>"index" %>
</div>

