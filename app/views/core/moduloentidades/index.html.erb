<div id="barra_titulo">
  <h3 class="titulo_index">Lista de Modulos da Entidade</h3>
</div>
  <% form_tag(:action=>"create") do %>
  <table id="listar">
   <tr>
     <th class="titulo_lista">Modulos Inclusos a Entidade</th>
    </tr>
    <% @entidade.moduloentidades.each do |me| %>
    <tr>
      <td>
       <%= check_box_tag "modulos[]", me.id %>
       <%= me.modulo.nome %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td><%= submit_tag "Remover" %></td>
    </tr>
  </table>
  <% end %>


