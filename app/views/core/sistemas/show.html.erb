<div id="barra_titulo">
  <h3 class="titulo_show">Sistema</h3>
  <div class="abilita"><%= link_to 'Atitar/Deszativar', {:controller=>"/core/sistemas", :action=>"mudar_status", id=>@sistema}, :confirm=> 'Você tem certesa que quer ativar ou desativar este sistema?' %></div>
  <div class="edit"><%= link_to 'Editar', edit_core_modulo_sistema_path(@sistema.modulo, @sistema) %></div>
</div>

<table id="listar">
  <tr>
    <td class="lista_item">Nome</td>
    <td class="lista_conteudo"><%= @sistema.nome %></td>
  </tr>
  <tr>
    <td class="lista_item">Descrição</td>
    <td class="lista_conteudo"><%= @sistema.descricao %></td>
  </tr>
  <tr>
    <td class="lista_item">Modulo</td>
    <td class="lista_conteudo"><%= @sistema.modulo.nome %></td>
  </tr>
  <tr>
    <td class="lista_item">Rota</td>
    <td class="lista_conteudo"><%= @sistema.rota %></td>
  </tr>
  <tr>
    <td class="lista_item">Classe</td>
    <td class="lista_conteudo"><%= @sistema.controle %></td>
  </tr>
  <tr>
    <td class="lista_item">Status</td>
    <td class="lista_conteudo"><%= status(@sistema.status) %></td>
  </tr>
</table>

<div id="link_voltar">
  <%= link_to 'Voltar', core_modulo_sistemas_path(@sistema.modulo) %>
</div>

